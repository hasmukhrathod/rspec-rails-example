<%= form_with(model: post, local: true, html: { class: 'form-horizontal'}) do |form| %>
  <div class='form-group'>
    <%= form.label :title, class: 'col-lg-3 control-label' %>
    <div class='col-lg-9'>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>
  </div>
  <div class='form-group'>
    <%= form.label :body, class: 'col-lg-3 control-label' %>
    <div class='col-lg-9'>
      <%= form.text_area :body, class: 'form-control', required: true %>
    </div>
  </div>
<% end %>